@page "/settings"

<div class="container my-5">
    <h3 class="text-center mb-4">QR Code Settings</h3>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Input for printed size in cm -->
            <div class="input-group mb-3">
                <span class="input-group-text">Size (cm)</span>
                <input type="number" min="1" step="0.1" @bind="SettingsService.PrintSizeCm" class="form-control" />
            </div>
            <!-- Input for QR code color -->
            <div class="input-group mb-3">
                <span class="input-group-text">QR Color</span>
                <input type="text" @bind="SettingsService.QrCodeColorInput" class="form-control" placeholder="#000000" />
            </div>
            <div class="mb-3">
                <input class="form-check-input" type="checkbox" @bind="SettingsService.SingleQrPerPage" id="flexCheckDefault">
                <label for="flexCheckDefault">Single QR per page</label><br>
            </div>
            <a href="/" class="btn btn-primary">Back to Generator</a>
        </div>
    </div>
</div>